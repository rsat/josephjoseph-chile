---
import type { Product } from '../data/products';

interface Props {
	product: Product;
}

const { product } = Astro.props;
---

<a href={`/productos/${product.id}`} class="product-card animate-on-scroll">
	<div class="product-image">
		{product.image ? (
			<img src={product.image} alt={product.name} />
		) : (
			<div class="placeholder-image" style={`background: ${product.gradient}`}>
				<span>{product.name}</span>
			</div>
		)}
	</div>
	<h3>{product.name}</h3>
	<p>{product.description}</p>
</a>

<style>
	.product-card {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		text-decoration: none;
		color: inherit;
		transition: transform 0.3s ease;
	}

	.product-card:hover {
		transform: translateY(-4px);
	}

	.product-card:hover h3 {
		color: var(--color-text);
	}

	.product-image {
		aspect-ratio: 1;
		overflow: hidden;
		border-radius: 8px;
	}

	.product-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.placeholder-image {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.25rem;
		font-weight: 500;
		color: var(--color-text-light);
	}

	h3 {
		font-size: 1.125rem;
		font-weight: 500;
		color: var(--color-dark);
	}

	p {
		font-size: 0.9375rem;
		color: var(--color-text-light);
		line-height: 1.5;
	}
</style>
