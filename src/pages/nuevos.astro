---
import Layout from '../layouts/Layout.astro';
import StickyNav from '../components/StickyNav.astro';
import Footer from '../components/Footer.astro';
import ProductCard from '../components/ProductCard.astro';
import { products } from '../data/products';

// Filtrar productos marcados como nuevos
const newProducts = products.filter(p => p.isNew);
---

<Layout title="Nuevos Productos - Joseph Joseph Chile">
	<StickyNav />

	<section class="new-products-hero">
		<div class="container">
			<h1>Nuevos Productos</h1>
			<p>Descubre las Ãºltimas incorporaciones de Joseph Joseph en Chile</p>
		</div>
	</section>

	<section class="new-products-content">
		<div class="container">
			<div class="products-count">
				<p>{newProducts.length} {newProducts.length === 1 ? 'producto nuevo' : 'productos nuevos'}</p>
			</div>
			<div class="product-grid">
				{newProducts.map((product) => (
					<ProductCard product={product} />
				))}
			</div>
		</div>
	</section>

	<Footer />
</Layout>

<style>
	.new-products-hero {
		background: var(--color-stone);
		padding: 4rem 0 3rem;
		text-align: center;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 500;
		color: var(--color-dark);
		margin-bottom: 1rem;
	}

	.new-products-hero p {
		font-size: 1.125rem;
		color: var(--color-text-light);
	}

	.new-products-content {
		padding: 4rem 0;
	}

	.products-count {
		margin-bottom: 2rem;
	}

	.products-count p {
		font-size: 0.9375rem;
		color: var(--color-text-light);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.product-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 3rem;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}

		.product-grid {
			grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
			gap: 2rem;
		}
	}
</style>
